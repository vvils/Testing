# Example environment variables for local development
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# Docker Hub credentials
DOCKERHUB_USERNAME=your-dockerhub-username
DOCKERHUB_TOKEN=your-dockerhub-token

# GitHub Personal Access Token (for runner setup, NOT for CI/CD jobs)
GITHUB_PERSONAL_ACCESS_TOKEN=your-github-pat

# Kubernetes config (base64 encoded if used in CI/CD)
KUBE_CONFIG=your-base64-encoded-kubeconfig

# Image names
DOCKER_IMAGE=your-dockerhub-username/simple-app

# Namespaces
KUBE_NAMESPACE=production
STAGING_NAMESPACE=staging

# Django Settings
DJANGO_SECRET_KEY=your-django-secret-key
DEBUG=True

# Database
DATABASE_URL=sqlite:///db.sqlite3

# Other environment variables as needed